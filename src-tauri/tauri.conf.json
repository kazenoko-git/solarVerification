{
  "productName": "Helioscope",
  "version": "1.0.0",
  "identifier": "com.wingit.helioscope",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "Helioscope - Solar Panel Detection",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "dialog": {
      "all": true,
      "open": true,
      "save": true
    },
    "fs": {
      "all": true,
      "read": true,
      "write": true,
      "copy": true,
      "remove": true,
      "rename": true,
      "metadata": true,
      "dir": true,
      "path": true
    },
    "shell": {
      "all": false,
      "open": true
    }
  }
}
